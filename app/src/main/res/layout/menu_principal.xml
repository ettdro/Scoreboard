<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Champ texte du titre. -->
    <TextView
        android:text="Hockey Scoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="318dp"
        android:layout_y="64dp"
        android:id="@+id/textView3"
        android:textSize="72sp"
        android:textColor="#000000"/>

    <!-- Bouton pour aller au Scoreboard. -->
    <Button
        android:text="Scoreboard"
        android:layout_width="243dp"
        android:layout_height="119dp"
        android:layout_x="301dp"
        android:layout_y="252dp"
        android:id="@+id/button"
        android:textSize="24sp"
        android:background="#31CC0E" />

    <!-- Bouton pour aller inscrire les joueurs et les officiels. -->
    <Button
        android:text="Inscription"
        android:layout_width="243dp"
        android:layout_height="119dp"
        android:layout_x="706dp"
        android:layout_y="252dp"
        android:id="@+id/button2"
        android:textSize="24sp"
        android:background="#FFFF00" />

    <!-- Bouton pour quitter. -->
    <Button
        android:text="Quitter"
        android:layout_width="243dp"
        android:layout_height="119dp"
        android:layout_x="508dp"
        android:layout_y="477dp"
        android:id="@+id/button3"
        android:textSize="24sp"
        android:background="#FF0000"/>
</AbsoluteLayout>