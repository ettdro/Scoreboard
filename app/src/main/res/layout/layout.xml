<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bouton pour démarrer les chronomètres. -->
    <Button
        android:text="Start"
        android:layout_width="227dp"
        android:layout_height="71dp"
        android:layout_x="530dp"
        android:layout_y="489dp"
        android:id="@+id/buttonStart"
        android:backgroundTint="#04ff00"
        android:textSize="36sp" />

    <!-- Bouton pour remettre à zéro tous les chronomètres. -->
    <Button
        android:text="Reset"
        android:layout_width="227dp"
        android:layout_x="530dp"
        android:layout_y="652dp"
        android:id="@+id/buttonReset"
        android:backgroundTint="#FF0000"
        android:layout_height="71dp"
        android:textSize="36sp" />

    <!-- Bouton pour mettre sur pause tous les chronomètres. -->
    <Button
        android:text="Pause"
        android:layout_width="227dp"
        android:layout_height="71dp"
        android:layout_x="530dp"
        android:layout_y="571dp"
        android:id="@+id/buttonPause"
        android:backgroundTint="#FFE500"
        android:textSize="36sp" />

    <!-- Bouton pour ajouter un but aux visiteurs. -->
    <Button
        android:layout_height="wrap_content"
        android:layout_x="163dp"
        android:layout_y="136dp"
        android:id="@+id/buttonScoreUpV"
        android:text="+"
        android:textSize="36sp"
        android:layout_width="157dp" />

    <!-- Champ texte pour désigner le côté des visiteurs. -->
    <TextView
        android:text="VISITEUR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="72dp"
        android:layout_y="22dp"
        android:id="@+id/visiteurLabel"
        android:textStyle="normal|bold"
        android:textSize="80sp" />

    <!-- Champ texte qui représente le score des visiteurs. -->
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="200dp"
        android:layout_y="179dp"
        android:id="@+id/scoreVisiteur"
        android:textSize="150sp"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />

    <!-- Champ texte pour désigner le côté des locaux. -->
    <TextView
        android:text="LOCAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="910dp"
        android:layout_y="22dp"
        android:id="@+id/localLabel"
        android:textStyle="normal|bold"
        android:textSize="80sp" />

    <!-- Bouton pour enlever un but aux visiteurs. -->
    <Button
        android:text="-"
        android:layout_height="wrap_content"
        android:layout_x="163dp"
        android:layout_y="350dp"
        android:id="@+id/buttonScoreDownV"
        android:layout_width="157dp"
        android:textSize="36sp" />

    <!-- Champ texte qui représente le score des locaux. -->
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="986dp"
        android:layout_y="179dp"
        android:id="@+id/scoreLocal"
        android:textSize="150sp"
        android:textStyle="normal|bold" />

    <!-- Bouton pour enlever un but aux locaux. -->
    <Button
        android:text="-"
        android:layout_height="wrap_content"
        android:layout_x="951dp"
        android:layout_y="351dp"
        android:id="@+id/buttonScoreDownLocal"
        android:layout_width="157dp"
        android:textSize="36sp" />

    <!-- Bouton pour ajouter un but aux locaux. -->
    <Button
        android:text="+"
        android:layout_height="wrap_content"
        android:layout_x="951dp"
        android:layout_y="136dp"
        android:id="@+id/buttonScoreUpLocal"
        android:layout_width="157dp"
        android:textSize="36sp" />

    <!-- Zone pour le chronomètre principal. -->
    <ImageView
        android:layout_width="247dp"
        android:layout_height="110dp"
        app:srcCompat="?attr/colorButtonNormal"
        android:layout_x="528dp"
        android:layout_y="23dp"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:id="@+id/imageViewChrono" />

    <!-- Bouton pour ajouter un tir aux visiteurs. -->
    <Button
        android:text="+"
        android:layout_width="76dp"
        android:layout_height="61dp"
        android:layout_x="530dp"
        android:layout_y="210dp"
        android:id="@+id/buttonTirsUpV"
        android:textSize="14sp" />

    <!-- Bouton pour ajouter un tir aux locaux. -->
    <Button
        android:text="+"
        android:layout_x="691dp"
        android:layout_y="210dp"
        android:id="@+id/buttonTirsUpL"
        android:textSize="14sp"
        android:layout_width="76dp"
        android:layout_height="61dp" />

    <!-- Bouton pour enlever un tir aux locaux. -->
    <Button
        android:text="-"
        android:layout_x="691dp"
        android:layout_y="360dp"
        android:id="@+id/buttonTirsDownL"
        android:textSize="14sp"
        android:layout_width="76dp"
        android:layout_height="61dp" />

    <!-- Bouton pour enlever un tir aux visiteurs. -->
    <Button
        android:text="-"
        android:layout_x="530dp"
        android:layout_y="360dp"
        android:id="@+id/buttonTirsDownV"
        android:textSize="14sp"
        android:layout_width="76dp"
        android:layout_height="61dp" />

    <!-- Champ texte qui indique la période. -->
    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="709dp"
        android:layout_y="142dp"
        android:id="@+id/periodeText"
        android:textSize="50sp"
        android:textStyle="normal|bold" />

    <!-- Champ texte pour écrire "Période". -->
    <TextView
        android:text="PÉRIODE:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="547dp"
        android:layout_y="152dp"
        android:id="@+id/periodeLabel"
        android:textSize="36sp" />

    <!-- Champ texte qui indique les tirs des visiteurs. -->
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="552dp"
        android:layout_y="282dp"
        android:id="@+id/tirsVisiteur"
        android:textSize="60sp"
        android:textStyle="normal|bold" />

    <!-- Champ texte qui indique les tirs des locaux. -->
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="715dp"
        android:layout_y="280dp"
        android:id="@+id/tirsLocal"
        android:textSize="60sp"
        android:textStyle="normal|bold" />

    <!-- Champ texte pour écrire "Tirs". -->
    <TextView
        android:text="TIRS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="612dp"
        android:layout_y="295dp"
        android:id="@+id/tirsLabel"
        android:textSize="36sp" />

    <!-- Champ texte pour le chronomètre principal. -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dip"
        android:textSize="72dp"
        android:layout_x="549dp"
        android:layout_y="52dp" />

    <!-- Spinner pour choisir le joueur de la pénalité 1 (visiteur). -->
    <Spinner
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_x="33dp"
        android:layout_y="499dp"
        android:id="@+id/spinnerPenaltyV1"
        style="@android:style/Widget.Spinner" />

    <!-- Spinner pour choisir le joueur de la pénalité 2 (visiteur). -->
    <Spinner
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="616dp"
        android:id="@+id/spinnerPenaltyV2"
        style="@android:style/Widget.Spinner" />

    <!-- Spinner pour choisir le joueur de la pénalité 1 (local). -->
    <Spinner
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_x="978dp"
        android:layout_y="489dp"
        android:id="@+id/spinnerPenaltyL1"
        style="@android:style/Widget.Spinner" />

    <!-- Affiche le numéro du joueur de la pénalité 1 (local). -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1012dp"
        android:layout_y="556dp"
        android:id="@+id/penalite3"
        android:textSize="40sp" />

    <!-- Spinner pour choisir le joueur de la pénalité 2 (local). -->
    <Spinner
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_x="974dp"
        android:layout_y="611dp"
        android:id="@+id/spinnerPenaltyL2"
        style="@android:style/Widget.Spinner" />

    <!-- Affiche le numéro du joueur de la pénalité 2 (local). -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1012dp"
        android:layout_y="674dp"
        android:id="@+id/penalite4"
        android:textSize="40sp" />

    <!-- Bouton pour modifier le temps du chronomètre principal. -->
    <Button
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_x="792dp"
        android:layout_y="54dp"
        android:drawableStart="@android:drawable/ic_dialog_dialer"
        android:id="@+id/buttonSetTimer" />

    <!-- Bouton pour modifier le temps de la pénalité 1 (local). -->
    <Button
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_x="848dp"
        android:layout_y="560dp"
        android:drawableStart="@android:drawable/ic_dialog_dialer"
        android:id="@+id/setTimerPenalite3" />

    <!-- Bouton pour modifier le temps de la pénalité 2 (local). -->
    <Button
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_x="850dp"
        android:layout_y="650dp"
        android:drawableStart="@android:drawable/ic_dialog_dialer"
        android:id="@+id/setTimerPenalite4" />

    <!-- Bouton pour modifier le temps de la pénalité 1 (visiteur). -->
    <Button
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_x="364dp"
        android:layout_y="560dp"
        android:drawableStart="@android:drawable/ic_dialog_dialer"
        android:id="@+id/setTimerPenalite1" />

    <!-- Bouton pour modifier le temps de la pénalité 2 (visiteur). -->
    <Button
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_x="368dp"
        android:layout_y="650dp"
        android:drawableStart="@android:drawable/ic_dialog_dialer"
        android:id="@+id/setTimerPenalite2" />

    <!-- Affiche le numéro du joueur de la pénalité 1 (visiteur). -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="76dp"
        android:layout_y="556dp"
        android:id="@+id/penalite1"
        android:textSize="40sp" />

    <!-- Texte qui indique le temps restant à la pénalité 1 (visiteur). -->
    <TextView
        android:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="216dp"
        android:layout_y="556dp"
        android:id="@+id/timerPenalite1"
        android:textSize="40sp" />

    <!-- Affiche le numéro du joueur de la pénalité 2 (visiteur). -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="76dp"
        android:layout_y="674dp"
        android:id="@+id/penalite2"
        android:textSize="40sp" />

    <!-- Texte qui indique le temps restant à la pénalité 2 (visiteur). -->
    <TextView
        android:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="216dp"
        android:layout_y="674dp"
        android:id="@+id/timerPenalite2"
        android:textSize="40sp" />

    <!-- Bouton pour afficher tous les officiels de la partie. -->
    <Button
        android:text="Officiels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="605dp"
        android:layout_y="435dp"
        android:id="@+id/buttonListerOfficiels"
        tools:text="Officiels" />

    <!-- Texte qui indique le temps restant à la pénalité 1 (local). -->
    <TextView
        android:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1155dp"
        android:layout_y="556dp"
        android:id="@+id/timerPenalite3"
        android:textSize="40sp" />

    <!-- Texte qui indique le temps restant à la pénalité 2 (local). -->
    <TextView
        android:text="00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1155dp"
        android:layout_y="674dp"
        android:id="@+id/timerPenalite4"
        android:textSize="40sp" />

</AbsoluteLayout>